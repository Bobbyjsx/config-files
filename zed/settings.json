// Zed Settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Language Models
  "auto_signature_help": true,
  "scrollbar": {
    "show": "auto"
  },
  "minimap": {
    "max_width_columns": 51,
    "current_line_highlight": "all",
    "thumb_border": "left_open",
    "thumb": "always",
    "show": "never"
  },
  "toolbar": {
    "breadcrumbs": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true
  },
  "extend_comment_on_newline": false,
  "completions": {
    "lsp_insert_mode": "replace"
  },
  "close_on_file_delete": true,
  "use_system_window_tabs": false,
  "title_bar": {
    "show_user_picture": true,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_branch_icon": false
  },
  "git_panel": {
    "collapse_untracked_diff": false,
    "sort_by_path": false,
    "status_style": "label_color"
  },
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "language_models": {
    "openai": {
      "api_url": "https://api.openai.com/v1"
    }
  },

  // Theme and Mode
  "theme": "One Light",
  "vim_mode": true,

  // UI Settings
  "ui_font_size": 14.5,

  // Text buffer font
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_features": {
    "liga": true,
    "calt": true
  },
  "buffer_font_weight": 400,

  // Editor Settings
  "ui_font_family": "IBM Plex Mono",
  "ui_font_features": {
    "liga": true,
    "calt": true
  },
  "ui_font_weight": 410.0,

  // Autosave
  "autosave": {
    "after_delay": {
      "milliseconds": 5000
    }
  },

  // Preview Tabs
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true
  },

  // Input and Line Numbers
  "show_completions_on_input": true,
  "relative_line_numbers": true,

  // Project Panel
  "project_panel": {
    "hide_root": false,
    "folder_icons": true,
    "file_icons": true,
    "auto_fold_dirs": false,
    "button": true,
    "indent_size": 16.0,
    "git_status": true,
    "auto_reveal_entries": true,
    "scrollbar": {
      "show": "auto"
    },
    "dock": "right"
  },

  // Terminal Settings
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    },
    "cursor_shape": "bar",
    "alternate_scroll": "on",
    "font_family": "JetBrains Mono NL",
    "line_height": "comfortable",
    "font_size": 12,
    "copy_on_select": false,
    "blinking": "on",
    "font_features": {
      "antialias": false
    }
  },

  // Formatting
  "use_on_type_format": true,

  // Inlay Hints
  "inlay_hints": {
    "enabled": false,
    "show_background": true
  },

  // Assistant Settings
  "linked_edits": true,
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    }
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "default_profile": "ask",
    "always_allow_tool_actions": true,
    "profiles": {
      "debug": {
        "name": "Debug",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_height": 340.0,
    "enabled": true,
    "button": true,
    "dock": "right",
    "default_width": 340
  },

  // Git Settings
  "git": {
    "branch_picker": {
      "show_author_name": true
    },
    "blame": {
      "show_avatar": true
    },
    "inline_blame": {
      "show_commit_summary": true
    },
    "git_gutter": "tracked_files",
    "gutter_debounce": 500
  },

  // Editor Wrap
  "soft_wrap": "editor_width",

  // Indent Guides
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  // Prettier Settings
  "prettier": {
    "allowed": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": true,
    "singleAttributePerLine": true,
    "bracketSameLine": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "embeddedLanguageFormatting": "auto"
  },

  // Quit Confirmation
  "confirm_quit": true,

  // Code Actions
  "formatter": "language_server",

  "code_actions_on_format": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true,
    "source.removeUnusedImports": true,
    "quickfix.biome": true,
    "source.action.useSortedKeys.biome": true,
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true
  },

  // Language Configurations
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.prettier": true,
        "source.removeUnusedImports": true,
        "source.sortImports": true,
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.prettier": true,
        "source.removeUnusedImports": true,
        "source.sortImports": true,
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.prettier": true,
        "source.removeUnusedImports": true,
        "source.sortImports": true,
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "JSON": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.prettier": true,
        "source.removeUnusedImports": true,
        "source.sortImports": true,
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },

    "Python": {
      "indent_guides": {
        "background_coloring": "disabled"
      },
      "show_edit_predictions": true,
      "language_servers": ["ruff", "..."],
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports.ruff": true,
        "source.fixAll.ruff": true
      },
      "format_on_save": "on"

      // {
      //     "external": {
      //       "command": "ruff",
      //       "arguments": [
      //         "check",
      //         "--exit-zero",
      //         "--fix",
      //         "--stdin-filename",
      //         "{buffer_path}",
      //         "-"
      //       ]
      //     }
      //   },
    },
    "JSONC": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.prettier": true,
        "source.removeUnusedImports": true,
        "source.sortImports": true,
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    }
  },

  // Language Server Protocol
  "language_servers": ["...", "!biome"],
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": [
            "simple-import-sort/imports",
            "react/jsx-sort-props",
            "sort-keys-fix/sort-keys-fix"
          ]
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "configuration": "pyproject.toml"
        }
      }
    },
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },

  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },

  // Vim Settings
  "vim": {
    "use_system_clipboard": "always",
    "toggle_relative_line_numbers": true
  },

  // Centered Layout
  "centered_layout": {
    "right_padding": 0.4,
    "left_padding": 0.4
  },

  // Tabs
  "tabs": {
    "git_status": true,
    "close_position": "left",
    "file_icons": true,
    "show_diagnostics": "all"
  }
}
