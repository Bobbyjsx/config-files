// Zed Settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Language Models
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "language_models": {
    "openai": {
      "api_url": "https://api.openai.com/v1"
    }
  },

  // Theme and Mode
  "theme": "One Dark",
  "vim_mode": true,

  // UI Settings
  "ui_font_size": 15,

  // Text buffer font
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_features":  {
    "liga": true,
    "calt":true
  },
  "buffer_font_weight": 400,

  // Editor Settings
  "ui_font_family": "IBM Plex Sans Var",
  "ui_font_features":  {
    "liga": true,
    "calt":true
  },
  "ui_font_weight": 450,

  // Autosave
  "autosave": {
    "after_delay": {
      "milliseconds": 5000
    }
  },

  // Preview Tabs
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true
  },

  // Input and Line Numbers
  "show_completions_on_input": true,
  "relative_line_numbers": true,

  // Project Panel
  "project_panel": {
    "auto_fold_dirs": false,
    "button": true,
    "indent_size": 15,
    "git_status": true,
    "auto_reveal_entries": true,
    "scrollbar": {
      "show": "auto"
    },
    "dock": "right"
  },

  // Terminal Settings
  "terminal": {
      "toolbar": {
        "breadcrumbs": true
      },
      "alternate_scroll": "on",
      "font_family": "JetBrains Mono",
      "line_height": "comfortable",
      "font_size": 12,
      "copy_on_select": false,
      "blinking": "on",
      "font_features": {
        "antialias":false
      }
    },

  // Formatting
  "use_on_type_format": true,

  // Inlay Hints
  "inlay_hints": {
    "enabled": false,
    "show_background": true
  },
  "linked_edits": true,
  "edit_predictions": {
    "copilot": {
  	"proxy": null,
  	"proxy_no_verify": null,
  	"enterprise_uri": null
    }
  },
  // Assistant Settings
  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "debug": {
        "name": "Debug",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "default_height": 340.0,
    "enabled": true,
    "button": true,
    "dock": "right",
    "default_width": 340
  },

  // Git Settings
  "git": {
    // "enabled": true,
    // "autoFetch": true,
    // "autoFetchInterval": 300,
    // "autoFetchOnFocus": true,
    // "autoFetchOnWindowChange": true,
    // "autoFetchOnBuild": true,
    // "git_status": true,
    // "autoFetchOnBuildEvents": ["build", "run", "debug", "checkout"],
    // "autoFetchOnBuildEventsDelay": 1500,
    // "autoFetchOnBuildDelay": 1500,
    "git_gutter": "tracked_files",
    "gutter_debounce": 500
  },

  // Editor Wrap
  "soft_wrap": "editor_width",

  // Indent Guides
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  // Prettier Settings
  "prettier": {
    "allowed": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": true,
    "singleAttributePerLine": true,
    "bracketSameLine": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "embeddedLanguageFormatting": "auto"
  },
  // "prettier_eslint": true,

  // Linter and ESLint
  // "linter": "eslint",
  // "bracket_pairing": "always",
  // "eslint": {
  //   "enabled": true,
  //   "autoFixOnSave": true,
  //   "autoFixOnFormat": true,
  //   "autoFixOnFormatDelay": 1500
  // },

  // Quit Confirmation
  "confirm_quit": true,

  // Code Actions
  "formatter": {
    "code_actions": {
      "source.fixAll.eslint": true,
      "source.organizeImports": true
    }
  },

  // Dock and Layout
  // "default_dock_anchor": "right",

  // Language Configurations
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.prettier": true,
        "source.removeUnusedImports": true,
        "source.sortImports": true,
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "prettier"
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
       },
      "format_on_save": "prettier"
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.sortImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
       },
      "format_on_save": "prettier"
    },
    "JSON": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.prettier": true,
        "source.removeUnusedImports": true,
        "source.sortImports": true,
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
       },
      "format_on_save": "prettier"
    }
  },

  // Language Server Protocol
  "language_servers": ["...", "!biome"],
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": [
            "simple-import-sort/imports",
            "react/jsx-sort-props",
            "sort-keys-fix/sort-keys-fix"
          ]
        }
      }
    }
  },

  "diagnostics": {
	"button": true,
	"include_warnings": true,
	"lsp_pull_diagnostics": {
		"enabled": true,
		"debounce_ms": 50
	},
	"inline": {
		"enabled": true,
		"update_debounce_ms": 150,
		"padding": 4,
		"min_column": 0,
		"max_severity": null
	},
	"cargo": null
  },

  // Vim Settings
  "vim": {
    "use_system_clipboard": "always",
    "toggle_relative_line_numbers": true
  },

  // Centered Layout
  "centered_layout": {
    "right_padding": 0.4,
    "left_padding": 0.4
  },

  // Tabs
  "tabs": {
    "git_status": true,
    "close_position": "left",
    "file_icons": true,
    "show_diagnostics": "all"
  }
}
